<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="page.wrapper">
            <container name="footer-bottom" as="footer-bottom" after="footer"
                       label="Footer Bottom" htmlTag="footer" htmlClass="page-footer-bottom">
                <container name="footer-bottom-content" as="footer-bottom-content"
                           htmlTag="div" htmlClass="footer content">
                    <block class="Magento\Framework\View\Element\Template"
                           name="report.bugs.bottom"
                           template="Magento_Theme::html/bugreport.phtml"/>
                </container>
            </container>
        </referenceContainer>     
        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="footer_extra_info_block">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer_extra_info</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
