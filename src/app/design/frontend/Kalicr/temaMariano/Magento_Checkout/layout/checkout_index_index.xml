<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="checkout.header.container" htmlTag="div" htmlClass="checkout-header-container" before="checkout.root">
                <block class="Magento\Framework\View\Element\Template" name="checkout.timer" template="Magento_Checkout::components/timer.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="checkout.banner" template="Magento_Checkout::components/banner.phtml"/>
            </container>
        </referenceContainer>

        <referenceContainer name="checkout.sidebar">
            <container name="checkout.sidebar.bottom" htmlTag="div" htmlClass="sidebar-bottom-container" after="-"/>
        </referenceContainer>

        <move element="checkout.sidebar.discount" destination="checkout.sidebar.bottom" />
        
    </body>
</page>